<Window x:Class="StockNewsNotifier.Views.EditSourcePoolDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Sources"
        Width="360"
        Height="320"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock x:Name="HeaderText"
                   FontSize="16"
                   FontWeight="Bold"
                   Margin="0,0,0,12"/>

        <ItemsControl Grid.Row="1" x:Name="SourceList">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <CheckBox Content="{Binding DisplayName}"
                              IsChecked="{Binding IsSelected, Mode=TwoWay}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="80" Margin="0,0,8,0" Content="Cancel" IsCancel="True"/>
            <Button Width="80" Content="Save" Click="OnSaveClicked"/>
        </StackPanel>
    </Grid>
</Window>
